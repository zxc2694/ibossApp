<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="horizontal">
            <Space
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_width="12dp"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:drawableTop="@drawable/inbound_removebg"
                android:padding="4dp"
                android:layout_gravity="center"
                android:text="            進貨系統"
                android:textColor="#91b361"
                android:textSize="16sp" />
            <Space
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="9"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:layout_gravity="center"
                android:text="           出貨系統"
                android:textColor="#91b361"
                android:textSize="16sp"
                android:drawableTop="@drawable/outbound_removebg"
                />
            <Space
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="horizontal">
            <Space
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_width="12dp"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:drawableTop="@drawable/report_removebg"
                android:padding="4dp"
                android:text="            報表系統"
                android:textColor="#91b361"
                android:textSize="16sp" />
            <Space
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="9"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="      客戶管理系統"
                android:textColor="#91b361"
                android:textSize="16sp"
                android:drawableTop="@drawable/customer_removebg"
                />
            <Space
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>