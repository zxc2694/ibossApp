<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_alignParentBottom="true"
       android:orientation="horizontal">
       <Button
           android:id="@+id/bottomButton1"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:layout_width="0dp"
           android:text="主頁面"
           android:background="#a8edfa"
           android:textColor="#000000"
           android:textSize="14sp"
           android:onClick="set_main_fragment_click"
           />
       <Button
           android:id="@+id/bottomButton2"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:layout_width="0dp"
           android:text="查詢貨物"
           android:background="#72cddd"
           android:textColor="#000000"
           android:textSize="14sp"
           android:onClick="set_item_fragment_click"
           />
       <Button
           android:id="@+id/bottomButton3"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:layout_width="0dp"
           android:text="登出"
           android:textColor="#000000"
           android:textSize="14sp"
           android:background="#72cddd"
           />
   </LinearLayout>
    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true">

    </FrameLayout>

</RelativeLayout>